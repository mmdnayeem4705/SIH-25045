# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=agri_supplychain
DB_USER=root
DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Blockchain Configuration
BLOCKCHAIN_NETWORK=http://127.0.0.1:8545
PRIVATE_KEY=your-ethereum-private-key-here
CONTRACT_ADDRESS_FARMER_GOVT=
CONTRACT_ADDRESS_GOVT_CUSTOMER=
CONTRACT_ADDRESS_TRACEABILITY=

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your-razorpay-secret

# UPI Configuration
UPI_MERCHANT_ID=your-merchant-id
UPI_MERCHANT_KEY=your-merchant-key

# IPFS Configuration
IPFS_HOST=127.0.0.1
IPFS_PORT=5001
IPFS_PROTOCOL=http

# AI Pricing API
PRICING_AI_API_URL=http://localhost:5000/api/predict-price
PRICING_AI_API_KEY=your-ai-api-key

# Notification Services
NOTIFICATION_EMAIL_SERVICE=gmail
NOTIFICATION_EMAIL_USER=your-email@gmail.com
NOTIFICATION_EMAIL_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# Government API Integration
GOVT_API_BASE_URL=https://api.gov.in/agri
GOVT_API_KEY=your-government-api-key